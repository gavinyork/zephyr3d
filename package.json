{
  "name": "@zephyr3d/root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint-libs": "eslint \"libs/**/*.ts\" -f compact",
    "lint-test": "eslint \"test/**/*.ts\" -f compact",
    "lint-examples": "eslint \"examples/**/*.ts\" -f compact",
    "lint": "npm run lint-libs && npm run lint-test && npm run lint-examples",
    "lint-fix-libs": "eslint --fix \"libs/**/*.ts\" -f compact",
    "lint-fix-test": "eslint --fix \"test/**/*.ts\" -f compact",
    "lint-fix-examples": "eslint --fix \"examples/**/*.ts\" -f compact",
    "lint-fix": "npm run lint-fix-libs && npm run lint-fix-test && npm run lint-fix-examples"
  },
  "devDependencies": {
    "eslint": "^8.33.0",
    "typescript": "^5.1.3",
    "@rollup/plugin-commonjs":"^25.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "eslint-plugin-tsdoc": "^0.2.17",
    "@typescript-eslint/parser": "^5.51.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0"
  }
}
