{
  "name": "@zephyr3d/scene",
  "version": "0.7.1",
  "description": "Scene API for zephyr3d",
  "homepage": "https://github.com/gavinyork/zephyr3d#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gavinyork/zephyr3d.git"
  },
  "scripts": {
    "clean": "shx rm -rf ./dist .tsbuildinfo",
    "build:check": "tsc -p . --noEmit",
    "lint": "cross-env NODE_OPTIONS=--max_old_space_size=8192 eslint \"src/**/*.ts\" -f compact",
    "lint-fix": "cross-env NODE_OPTIONS=--max_old_space_size=8192 eslint --fix \"src/**/*.ts\" -f compact",
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=8192 rollup -c --silent"
  },
  "keywords": [
    "javascript",
    "3d",
    "rendering",
    "engine",
    "webgl",
    "webgpu",
    "canvas",
    "zephyr3d",
    "device"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gavinyork/zephyr3d/issues"
  },
  "engines": {
    "node": ">=16.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@eslint/js": "~9.38.0",
    "@rollup/plugin-node-resolve": "~16.0.0",
    "@rollup/plugin-strip": "~3.0.4",
    "@rollup/plugin-terser": "~0.4.4",
    "@rollup/pluginutils": "~5.1.4",
    "@swc/core": "^1.3.62",
    "@typescript-eslint/eslint-plugin": "~8.46.1",
    "@typescript-eslint/parser": "~8.46.1",
    "cross-env": "^7.0.3",
    "eslint": "~9.38.0",
    "eslint-config-prettier": "~10.1.8",
    "eslint-formatter-compact": "~8.40.0",
    "eslint-import-resolver-typescript": "~4.4.4",
    "eslint-plugin-import": "~2.32.0",
    "eslint-plugin-prettier": "~5.5.4",
    "eslint-plugin-tsdoc": "~0.4.0",
    "globals": "^16.4.0",
    "prettier": "~3.6.2",
    "rollup": "~4.30.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "~6.1.1",
    "rollup-plugin-swc3": "~0.12.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "shx": "^0.3.4",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@types/draco3d": "^1.4.9",
    "@webgpu/types": "^0.1.65",
    "@zephyr3d/base": "workspace:^0.2.1",
    "@zephyr3d/device": "workspace:^0.2.6",
    "es-module-lexer": "^1.7.0"
  }
}
